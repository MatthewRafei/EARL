fn test_function_chaining() {
    let lst = [[1,2,3],[4,5,6],[7,8,9]];

    let tmp = 1;

    for i in 0..3 {
        for j in 0..3 {
            assert(lst.nth(i).nth(j) == tmp);
            tmp = tmp+1;
        }
    }
}

fn test_nested_lists() {
    print("test_function_chaining...");

    let lst = [[1,2,3],[4,5,6],[7,8,9]];

    let tmp = 1;

    for i in 0..3 {
        for j in 0..3 {
            let l = lst.nth(i);
            assert(l.nth(j) == tmp);
            tmp = tmp+1;
        }
    }

    print("ok");
}

