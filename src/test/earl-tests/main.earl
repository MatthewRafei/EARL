fn test_reference2() {
    print("test_reference2");

    let lst = [1,2,3,4,5];

    @ref let ptr = lst;

    for i in 0..len(ptr) {
        ptr[i] = ptr[i] + 1;
    }

    assert(lst == [2,3,4,5,6]);
    assert(ptr == [2,3,4,5,6]);
    assert(lst == ptr);

    print("ok");
}

fn test_reference1() {
    print("test_reference1");

    let orig = 1;
    @ref let ptr = orig;

    ptr = 2;

    assert(orig == 2);
    assert(ptr == 2);
    assert(orig == ptr);

    ptr = ptr + 1;

    assert(orig == 3);
    assert(ptr == 3);
    assert(orig == ptr);

    print("ok");
}

