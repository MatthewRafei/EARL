fn test_list_rev_intrinsic2() {
    print("test_list_rev_intrinsic2...");

    let lst = [[3,2,1],[6,5,4],[9,8,7]];
    let t = 9;

    lst.rev();

    for i in 0..len(lst) {
        for j in 0..len(lst.nth(i)) {
            assert(lst.nth(i).nth(j) == t);
            t = t-1;
        }
    }

    print("ok");
}

fn test_list_rev_intrinsic1() {
